    <script src="~/Scripts/js/base.js"></script>*@
    <script>
    
        function OpenDropDown(li) {
            if ($(li).parent().hasClass('open')) {
                $(li).parent().removeClass('open');
            }
            else {
                $(li).parent().addClass('open');
            };
        };

       

        $(document).ready(function() {
        var date = new Date();
        var d = date.getDate();
        var m = date.getMonth();
        var y = date.getFullYear();
        
      });
    </script><!-- /Calendar -->
</body>
</html>
